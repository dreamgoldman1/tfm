{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hola list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tareas</th>
                <th>Estado</th>
                <th>Creado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hola_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tareas }}</td>
                <td>{{ entity.estado }}</td>
                <td>{% if entity.creado %}{{ entity.creado|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hola_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('hola_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hola_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
