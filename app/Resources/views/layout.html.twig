<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('public/css/style.css') }}" />
            <link rel="stylesheet" href="{{ asset('public/css/flexslider.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <main role="main">
            {# Header #}
            {% block header %}
                {{ render(controller('CommonMiscBundle:Header:header')) }}
                {# {{ render(url('header')) }} #}
            {% endblock %}
            
            {# Men√∫ #}
            {% block nav %}
                {{ render(controller('CommonMenuBundle:Menu:menu')) }}
            {% endblock %}
            
            {# Content #}
            <div class="wrapper">
            {% block body %}
                {% block sidebar %}{% endblock %}
                {% block content %}{% endblock %}
            {% endblock %}
            </div>
            
            {# Footer #}
            {% block footer %}
                {{ render(controller('CommonMiscBundle:Footer:footer')) }}
            {% endblock %}
            {% block javascripts %}
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script src="{{ asset('public/js/custom.js') }}"></script>
                <script src="{{ asset('public/js/jquery.flexslider-min.js') }}"></script>
                <script src="{{ asset('public/js/flexsliderInit.js') }}"></script>
                <script src="{{ asset('public/js/formularioRegistro.js') }}"></script>
            {% endblock %}
        </main>
    </body>
</html>